#!/bin/bash

pidfile=~/tmp/olimap.pid

quit () {
    kill $respawn_pid
    kill `<$pidfile`
    rm $pidfile
    exit
}

startmutt=false
case $1 in
    -x) quit ;;
    -m) startmutt=true ;&
    *)

        echo -n 'tmh.cc account password: '
        read -s pass
        echo

        while :; do
            echo $pass |
            offlineimap -k Repository_Remote:remotepassfile=/dev/stdin \
                -u quiet 2>&1 |
            ts >/tmp/olimap_$USER.log &
            pid=$!
            echo $pid >$pidfile
            trap exit TERM
            wait $pid
            echo -en "\a"
        done &
        respawn_pid=$!

        if $startmutt; then
            mutt
            quit
        fi

        ;;
esac
